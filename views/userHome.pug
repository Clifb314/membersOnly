extends layout 

block content 
    h1= title 
    .homepage 
        h2 Account Details:
        p= 'Name: ' + user.fullName
        p= 'E-mail: ' + user.email 
        p= 'Votes: ' + user.votes 
        p= 'Status: ' + user.checkStatus
        p Recent messages:
        if user.msgHistory.length > 0
            each msg in user.msgHistory 
                .history 
                    p= msg.content 
                    p= msg.date 
                    p= msg.votes
        else 
            p There's nothing here! Go post something